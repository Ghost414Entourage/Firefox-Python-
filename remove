nano delete_one_profiles.sh




#!/bin/bash

# Define base directories
PROFILE_DIR="/home/ubuntu/snap/firefox/common/.mozilla/firefox"
CACHE_DIR="/home/ubuntu/snap/firefox/common/.cache/mozilla/firefox"

# Function to delete .one directories in a given path
delete_one_dirs() {
    local dir="$1"
    echo "üîç Scanning: $dir"
    if [ -d "$dir" ]; then
        find "$dir" -maxdepth 1 -type d -name "*.one" -exec rm -rf {} \;
        echo "‚úÖ Deleted .one directories in $dir"
    else
        echo "‚ö†Ô∏è Directory not found: $dir"
    fi
}

# Run deletions
delete_one_dirs "$PROFILE_DIR"
delete_one_dirs "$CACHE_DIR"




///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////








find /home/ubuntu/snap/firefox/common/.mozilla/firefox/ /home/ubuntu/snap/firefox/common/.cache/mozilla/firefox/ -maxdepth 1 -type d -name "*.one" -exec rm -rf {} +




chmod +x delete_one_profiles.sh



./delete_one_profiles.sh





